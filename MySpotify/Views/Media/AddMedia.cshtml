@model MySpotify.Models.MediaAdd


<div class="header navbar navbar-expand-lg navbar-light bg-black">
    <div class="header__section">
        <div class="header__item headerlogo">
            <a class="nav-item nav-link active" asp-action="Index" asp-controller="Users">
                <img src="~/img/spotify-logo.svg" style="max-width:100px;" />
            </a>
        </div>

    </div>

    <div class="header__section">
        <div class="header__item headerlogo">
            
        </div>
        <div class="header__item headerlogo">
           
        </div>
    </div>
</div>

<section>
    <div class="form-box" style="height: 650px;">
		<div class="form-value">
			<form asp-action="AddMedia" asp-controller="Media" enctype="multipart/form-data">
				<h4>Media</h4>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label">Исполнитель</label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileAdress"  class="control-label">mp3 Файл</label>
                <input asp-for="FileAdress" name="upMediaFile"  class="form-control" type="file" accept=".mp3" />
                <span asp-validation-for="FileAdress" class="text-danger"></span>
            </div>
           <div>          
            <label asp-for="Poster"  class="control-label">Постер</label><br />
                    <input asp-for="Poster" name="upPoster" type="file" class="form-control" accept=".jpg, .jpeg, .png" />
            <span asp-validation-for="Poster" class="text-danger"></span>
            </div>


            <div class="form-group">
                @Html.DropDownList("typeMedia",
               Html.GetEnumSelectList<TypeMedia>(),
               "Select Type" ,
               new {@class = "form-control"})

                
            </div>
            <div class="form-group">
                @Html.DropDownList("genre",
                         ViewBag.Genres,
                         "Select genre",
                         new { @class = "form-control" })

                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create"/>
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</section>














